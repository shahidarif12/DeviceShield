# API Settings
SECRET_KEY=your_secret_key_here

# Database Configuration
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=device_management
PGPORT=5432

# Optional: Direct DATABASE_URL
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/device_management

# SQLite Fallback (for development/testing)
# USE_SQLITE=true
# SQLITE_DB=device_management.db

# Firebase Admin SDK
# Path to Firebase service account credentials JSON file
FIREBASE_CREDENTIALS=path/to/firebase-adminsdk.json

# CORS Settings
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5000,http://localhost:3000
